{
  "name": "@n1k1t/task-processor",
  "version": "0.1.10",
  "description": "Runner for background and cli tasks with SASS/CommonJS bundlers using native multithreading",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "dev": "nodemon test/index",
    "ts-watch": "npx tsc -w",
    "build": "npx tsc",
    "ts-check": "npx tsc --build --clean",
    "prepare": "npx husky install && npm run build",
    "preversion": "npm run build",
    "version": "git add -A .",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "tags": [
    "bundle"
  ],
  "nodemonConfig": {
    "ignore": [
      "*.ts",
      "test/src/*",
      "test/dest/*"
    ]
  },
  "author": "n1k1t",
  "license": "ISC",
  "devDependencies": {
    "@types/browserify": "^12.0.37",
    "@types/chokidar": "^2.1.3",
    "@types/glob": "^7.2.0",
    "@types/gradient-string": "^1.1.2",
    "@types/lodash": "^4.14.182",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^17.0.29",
    "@types/sass": "^1.43.1",
    "@types/sharp": "^0.30.2",
    "@types/syntax-error": "^1.4.1",
    "@types/tcp-port-used": "^1.0.1",
    "@types/websocket": "^1.0.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "browserify": "^17.0.0",
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "glob": "^8.0.1",
    "gradient-string": "^2.0.0",
    "lodash": "^4.17.21",
    "minimatch": "^5.0.1",
    "sass": "^1.51.0",
    "sharp": "^0.30.4",
    "syntax-error": "^1.4.0",
    "tcp-port-used": "^1.0.2",
    "threads": "^1.7.0",
    "websocket": "^1.0.34"
  }
}
